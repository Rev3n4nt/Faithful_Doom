class Caco : Cacodemon replaces Cacodemon
{
Default
	{
	species "Cacodemon";
	Health 400;
	Radius 31;
	Height 56;
	Mass 400;
	Speed 8;
	PainChance 128;
	Monster;
	+FLOAT +NOGRAVITY
	SeeSound "caco/sight";
	AttackSound "imp/melee";
	PainSound "caco/pain";
	DeathSound "caco/death";
	ActiveSound "caco/active";
	Obituary "$OB_CACO";
	HitObituary "$OB_CACOHIT";
	Tag "$FN_CACO";
	+FORCEXYBILLBOARD
	bloodcolor "00 00 CC";
	gibhealth 50;
	+FLOATBOB
	FloatBobStrength 0.35;
	// Bloodtype "Blueblood";
	// BloodColor "blue";
	}
override void Tick() {
	super.Tick();
	if (!InStateSequence(curstate,FindState("Spawn")))
		bFLOATBOB = false;
	}
states
	{
	See:
		HEAD A 3 A_Chase();
		loop;
		HEMI EDCB 3 A_Chase();
		goto see;
	Missile:
		HEMI BC 2 A_FaceTarget();
		HEMI DE 3 A_FaceTarget();
		TNT1 a 0;
		// HEAA E 4 A_CustomComboAttack("BD_CacodemonBall", 32, 10 * random(1, 6));
		HEMI F 5 Bright A_HeadAttack();
		// HEAA CCA 1;
		TNT1 a 0;
		goto See+2;
	Pain:
		HEAA H 4;
		HEAA G 4 A_Pain();
		HEAA F 4;
		Goto See;
	Crush:
		CRS2 B -1;
		stop;
	Death:
		TNT1 A 0 {
			scale.x*=randompick(-1,1);
			bFORCEXYBILLBOARD = false;
			return A_jump(256,"Death1", "Death2");
			return ResolveState(null);	
			}
	Death1: //no eye, intestines fall down
		TNT1 a 0 A_JumpIfHealthLower(-25,"xdeath");
		HDSD A 3;
		HDSD B 3 A_Scream();
		HDSD CD 3;
		HDSD E 3 A_NoBlocking();
		HDSD F 3 A_SetFloorClip();
		HDSD GH 3;
		HDSD I -1;
		Stop;
	Death2:
		TNT1 a 0 A_JumpIfHealthLower(-25,"xdeath");
		HDD2 A 3;
		HDD2 B 3 A_Scream();
		HDD2 CD 2;
		HDD2 E 2 A_NoBlocking();
		HDD2 F 2 A_SetFloorClip();
		HDD2 GHIJK 2;
		HDD2 L -1;
		Stop;
	xdeath:
		CACX ab 2;
		CACX c 2;
		TNT1 a 0 a_playsound ("misc/gibbed");
		CACX d 2 A_Scream();
		CACX ef 2;
		CACX g 2 A_NoBlocking();
		CACX h 2 a_setfloorclip();
		CACX ijklmnopqr 2;
		CACX s -1;
		stop;
	}
}